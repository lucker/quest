{% extends 'base.html.twig' %}

{% block main %}
    <form id="formId">
        <div class="row">
            <div class="col-sm-10">
                <input type="text" name="answer" class="form-control" placeholder="">
                <input type="hidden" name="hash" value="{{ questTeamParticipant.hash }}">
            </div>
            <div class="col-sm-2">
                <input id="submitButton" type="submit" class="btn btn-primary" value="Відповісти"/>
            </div>
        </div>
    </form>
    <div id="correct_answers">

    </div>
    <div id="wrong_answers">

    </div>
    <div class="col-sm-12">
        {{ questQuestion.question }}
    </div>
    <script>
        $("form").on("submit", function (e) {
            var dataString = $(this).serialize();

            $.ajax({
                type: "POST",
                url: "/en/check-answer",
                data: dataString,
                success: function (data, status) {
                    console.log(data);
                    let correct = data.correct;
                    let answer = data.answer;
                    if (correct) {
                        $("#correct_answers").append('<div class="text-success">' + answer + '</div>')
                    } else {
                        $("#wrong_answers").html('<div class="text-danger">' + answer  + '</div>')
                    }
                    //location.reload();
                }
            });
            e.preventDefault();
        });
    </script>
{% endblock %}